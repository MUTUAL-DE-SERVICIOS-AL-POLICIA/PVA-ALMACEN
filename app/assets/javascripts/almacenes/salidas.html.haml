%section{ 'ng-controller' => 'SalidasController' }
  %ul.nav.nav-tabs
    %li{ role: "presentation"}
      %a(href="#/entradas") Entradas
    %li.active{ role: "presentation"}
      %a(href="#/salidas") Salidas

  %table.table.table-striped.table-hover.table-bordered
    %thead
      %tr
        %th Id
        %th Nº
        %th.col-sm-3 Empresa
        %th Encargado(a)
        %th{title: 'Fecha de nota de solicitud'} Fecha
        %th.number Costo total
        %th.text-center{title: 'Número de nota de entrega'} Nota de entrega
        %th.text-center.col-sm-1{title: 'Número de factura'} Factura
        %th{title: 'Fecha de creación'} Creado el
        %th
    %tbody
      %tr{'ng-repeat' => 'solicitud in solicitudes', 'ng-class' => "{'anulado warning': solicitud.anulado}", title: '{{anulado.mensaje}}'}
        %td {{solicitud.id}}
        %td {{solicitud.nro}}
        %td {{solicitud.empresa}}
        %td {{solicitud.encargado}}
        %td {{solicitud.fecha | date: 'dd/MM/yyyy'}}
        %td.number {{solicitud.total | number:2}}
        %td.text-center {{solicitud.nota_entrega_nro}}
        %td.text-center {{solicitud.factura_nro}}
        %td {{solicitud.creado_el | date: 'dd/MM/yyyy HH:mm'}}
        %td
          %a(class="btn btn-default btn-xs" href="#" title="Ver" ng-hide='{{true}}')
            %span(class="glyphicon glyphicon-eye-open")
          %a(class="btn btn-primary btn-xs" href="#" title="Editar" ng-hide='{{true}}')
            %span(class="glyphicon glyphicon-edit")
          %button(class="btn btn-warning btn-xs" title="Anular" ng-hide='solicitud.anulado' ng-click="anularSolicitud(solicitud)")
            %span(class="glyphicon glyphicon-remove")
