.page-header
  %h2= t("entities.title.#{params[:action]}")

.col-sm-9.column.col-sm-offset-1
  = simple_form_for @entity, html: { class: 'form-horizontal' } do |f|
    = f.input :code
    = f.input :name
    = f.input :acronym
    = f.file_field :header
    = f.file_field :footer

    = render 'shared/form_buttons'
