.row
  .col-lg-offset-3.col-md-offset-2.col-lg-6.col-md-8.col-sm-12
    %h3.col-md-offset-2.col-md-9.text-center Generar Código de Barras de Activos
    %form.form-horizontal{ role: 'form' }
      - if !@asset
        .form-group
          %label.col-md-2.col-sm-2.control-label Cuenta
          .col-md-9.col-sm-9
            = select_tag :account, options_for_select(get_accounts), class: 'form-control', prompt: '--', autofocus: true
      - if !@asset && @auxiliary
        .form-group
          %label.col-md-2.col-sm-2.control-label Auxiliar
          .col-md-9.col-sm-9
            = select_tag :auxiliary, options_for_select([]), class: 'form-control', prompt: '--', disabled: true
      - if @asset
        .form-group
          %label.col-md-2.col-sm-2.control-label Buscar
          .col-md-6.col-sm-6
            = text_field_tag :q, '', class: 'form-control'
          .col-md-3.col-sm-3
            = select_tag :fields, options_for_select(['Código', 'Descripción', 'Usuario']), class: 'form-control'

  #pdf-assets.col-md-offset-2.col-md-8

= render 'pdf_assets_tpl'
