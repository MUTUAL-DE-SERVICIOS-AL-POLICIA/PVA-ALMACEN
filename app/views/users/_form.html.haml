.col-md-8.column.col-md-offset-1
  = simple_form_for @user, html: { class: 'form-horizontal' } do |f|
    .form-group= f.input :code
    .form-group= f.input :name
    .form-group= f.input :title
    .form-group= f.input :ci
    .form-group= f.input :email
    .form-group= f.input :username
    .form-group= f.input :password
    .form-group= f.input :password_confirmation
    .form-group= f.input :phone
    .form-group= f.input :mobile

    .form-group
      .col-lg-offset-5.col-lg-9
        = button_tag class: 'btn btn-primary' do
          %span.glyphicon.glyphicon-ok
          Aceptar
        = link_to users_path, class: 'btn btn-danger' do
          %span.glyphicon.glyphicon-remove
          Cancelar
