.page-header
  %h1= t("users.title.#{params[:action]}")

.col-md-8.column.col-md-offset-1
  = simple_form_for @user, html: { class: 'form-horizontal' } do |f|
    = f.input :code
    = f.input :name
    = f.input :title
    = f.input :ci
    = f.input :email, required: true
    = f.input :username
    = f.input :password, required: true
    = f.input :password_confirmation
    = f.input :phone
    = f.input :mobile
    = f.association :department, include_blank: false

    = render 'shared/form_buttons'
