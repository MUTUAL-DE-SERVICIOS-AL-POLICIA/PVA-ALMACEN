%h3= t("#{controller_name}.title.title")

%table.table.table-condensed
  %thead
    %tr
      %th= User.human_attribute_name('code')
      %th= User.human_attribute_name('name')
      %th= User.human_attribute_name('title')
      %th= User.human_attribute_name('ci')
      %th= User.human_attribute_name('email')
      %th= User.human_attribute_name('username')
      %th= User.human_attribute_name('phone')
      %th= User.human_attribute_name('mobile')
      %th= User.human_attribute_name('department')
      %th= User.human_attribute_name('status')
  %tbody
    - @array.each do |user|
      %tr
        %td= user.code
        %td= user.name
        %td= user.title
        %td= user.ci
        %td= user.email
        %td= user.username
        %td= user.phone
        %td= user.mobile
        %td= user.department_name
        %td= type_status(user.status)
