!!!
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}/

    %title VSIAF - #{ yield_or_default(:title, 'Sistema de Activos Fijos y Almacenes') }
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    .navbar.navbar-inverse{role: "navigation"}
      .container-fluid
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "Sistema de Activos Fijos", root_path, class: 'navbar-brand'
        = render 'layouts/main_nav'

    .col-sm-12.col-md-12.main
      - if notice.present?
        .alert.alert-success
          %button(type="button" class="close" data-dismiss="alert" aria-hidden="true") &times;
          = notice.html_safe
      - if alert.present?
        .alert.alert-danger
          %button(type="button" class="close" data-dismiss="alert" aria-hidden="true") &times;
          = alert.html_safe
      = yield
    = javascript_include_tag "application", "data-turbolinks-track" => true
