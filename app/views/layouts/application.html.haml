!!!
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}/

    %title NVSIAF
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    .navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      .container-fluid
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: "#"} Sistema de Activos Fijos
        .navbar-collapse.collapse
          %ul.nav.navbar-nav.navbar-right.right_menu
            %li.active
              %a{href: "#"} Dashboard
            %li
              %a{href: "#"} Settings
            %li
              %a{href: "#"} Profile
            %li
              %a{href: "#"} Help
    = render '/layouts/menu_left', type_model: controller_name
    .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main.margin-content
      = notice if notice.present?
      = yield
    = javascript_include_tag "application", "data-turbolinks-track" => true
