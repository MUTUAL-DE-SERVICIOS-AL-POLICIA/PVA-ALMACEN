.row
  .col-lg-offset-1.col-lg-4.col-md-6.col-sm-6
    %h3.text-center Selección de Usuarios
    %form.form-horizontal{ role: 'form' }
      .form-group
        %label.col-md-3.col-sm-3.control-label Edificio
        .col-md-9.col-sm-9= select_tag :building, ['uno', 'dos', 'tres'], class: 'form-control'
      .form-group
        %label.col-md-3.col-sm-3.control-label Departamento
        .col-md-9.col-sm-9= select_tag :building, ['uno', 'dos', 'tres'], class: 'form-control'
      .form-group
        %label.col-md-3.col-sm-3.control-label Usuario
        .col-md-9.col-sm-9= select_tag :building, ['uno', 'dos', 'tres'], class: 'form-control'
      .form-group
        .col-md-offset-3.col-sm-offset-1.col-md-9.col-sm-10
          = button_tag 'Asignación', class: 'btn btn-default'
          = button_tag 'Devolución', class: 'btn btn-primary'
          = link_to 'Cancelar', assets_path, class: 'btn btn-danger'
  .col-lg-offset-1.col-lg-4.col-md-6.col-sm-6
    %h3.text-center Asignar Activos Fijos
    %table.table
      %thead
        %tr
          %th.col-sm-1
          %th.col-sm-9 Descripción
          %th.col-sm-2 Código
      %tbody
        - (1..10).each do |i|
          %tr
            %td= check_box_tag '', false
            %td XXXXXXXXXXXXXXX#{ i }
            %td AAA-#{ i }
    .row
      .col-md-12.col-sm-12
        %h4 A:
      .col-md-6.col-sm-6
        %h4 Funcionario: Pepito Perez
      .col-md-6.col-sm-6
        %h4 Cargo: Responsable de todo
      .col-md-offset-3.col-sm-offset-3.col-md-9.col-sm-9
        = button_tag 'Continuar', class: 'btn btn-default'
        = link_to 'Cancelar', '#', class: 'btn btn-danger'
