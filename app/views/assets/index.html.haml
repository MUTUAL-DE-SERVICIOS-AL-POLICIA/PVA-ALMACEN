%h2.sub-header= t("assets.title.title")

%table.table.table-striped.table-hover
  %thead
    %tr
      %th= Asset.human_attribute_name('id')
      %th= Asset.human_attribute_name('code')
      %th= Asset.human_attribute_name('description')
      %th= Asset.human_attribute_name('auxiliary')
      %th= Asset.human_attribute_name('user')
      %th= t('general.actions')

  %tbody
    - @assets.each do |asset|
      %tr
        %td= asset.id
        %td= asset.code
        %td= asset.description
        %td= link_to_if asset.auxiliary, asset.auxiliary_name, asset.auxiliary
        %td= link_to_if asset.user, asset.user_name, asset.user
        %td.td_actions
          = link_to asset, class: 'btn btn-primary' do
            %span.glyphicon.glyphicon-eye-open
            = t("general.btn.show")
          = link_to [:edit, asset], class: 'btn btn-primary' do
            %span.glyphicon.glyphicon-edit
            = t("general.btn.edit")
          = link_to asset, class: 'btn btn-danger', method: :delete, data: { confirm: t('general.are_you_sure') } do
            %span.glyphicon.glyphicon-remove
            = t("general.btn.destroy")
