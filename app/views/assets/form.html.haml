.page-header
  %h1= t("assets.title.#{params[:action]}")

.col-md-8.column.col-md-offset-1
  = simple_form_for @asset, html: { class: 'form-horizontal' } do |f|
    = f.input :code
    = f.input :description
    = f.association :auxiliary, collection: status_active(Auxiliary), include_blank: false, disabled: !@asset.new_record?, readonly: !@asset.new_record?
    = f.association :user, collection: status_active(User), include_blank: false, disabled: !@asset.new_record?, readonly: !@asset.new_record?

    = render 'shared/form_buttons'
