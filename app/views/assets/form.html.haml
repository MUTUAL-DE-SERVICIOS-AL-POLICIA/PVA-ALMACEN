.page-header
  %h1= t("assets.title.#{params[:action]}")

.col-md-8.column.col-md-offset-1
  = simple_form_for @asset, html: { class: 'form-horizontal' } do |f|
    = f.input :code, required: true
    = f.input :description, required: true
    = f.association :auxiliary, collection: status_active(Auxiliary), include_blank: false, disabled: !@asset.new_record?, readonly: !@asset.new_record?, required: true
    = f.association :user, collection: [@asset.new_record? ? current_user : @asset.user], include_blank: false, disabled: true, readonly: true, required: true

    = render 'shared/form_buttons'
