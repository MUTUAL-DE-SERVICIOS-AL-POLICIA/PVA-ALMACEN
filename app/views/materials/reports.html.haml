#report_subarticle.page-header
  %h2 Reportes

%table.table.table-bordered.table-hover
  %thead
    %tr.vertical-align.info
      %th.text-center{rowspan: "2"} Código
      %th.text-center{rowspan: "2"} Descipción de Material
      %th.text-center{rowspan: "2"} Unidad
      %th.text-center{colspan: "3"} Saldos al 13/12/2012
      %th.text-center{colspan: "3"} Entradas
      %th.text-center{colspan: "2"} Salidas Exist Almacén
      %th.text-center{rowspan: "2"} Costo Unit Bs.
      %th.text-center{rowspan: "2"} Saldo Bs. al 31/12/2013
      %th.text-center{rowspan: "2"} Recuento físico al 31/12/2013
    %tr.vertical-align.info
      %th.text-center Control Físico
      %th.text-center Costo Unitario
      %th.text-center Costo Total
      %th.text-center Exist Almacacén
      %th.text-center Costo Unit.
      %th.text-center Costo Total
      %th.text-center Salidas Exist Almacén
      %th.text-center Saldos Exist Almacén
  %tbody
    - for material in @materials
      %tr
        %th= material.code
        %th= material.description.upcase
        %td{colspan: 12}
      - for article in @articles
        - if article.material == material
          %tr
            %th= article.code
            %th
              - description = article.description.downcase
              - description[0] = description[0].capitalize
              = description
            %td{colspan: 12}
          - for subarticle in @subarticles
            - if subarticle.article == article
              %tr
                %td= subarticle.code
                %td= subarticle.description
                %td.text-center= subarticle.unit
                %td.text-center= 1
                %td.text-center= 1
                %td.text-center= 1
                %td.text-center= 1
                %td.text-center= 1
                %td.text-center= 1
                %td.text-center= 1
                %td.text-center= 1
                %td.text-center= 1
                %td.text-center= 1
                %td.text-center= 1
