%h2.sub-header= t("accounts.title.title")

%table.table.table-striped.table-hover
  %thead
    %tr
      %th= Account.human_attribute_name('code')
      %th= Account.human_attribute_name('name')
      %th= t('general.actions')
  %tbody
    - @accounts.each do |account|
      %tr
        %td= account.code
        %td= account.name
        %td{style: 'width: 22%;'}
          = link_to [:edit, account], class: 'btn btn-primary' do
            %span.glyphicon.glyphicon-edit
            = t("general.btn.edit")
          = link_to account, class: 'btn btn-danger', method: :delete, data: { confirm: t('general.are_you_sure') } do
            %span.glyphicon.glyphicon-remove
            = t("general.btn.destroy")
