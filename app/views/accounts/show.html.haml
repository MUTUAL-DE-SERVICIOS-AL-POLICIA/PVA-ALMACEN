.page-header
  .pull-right
    = link_to edit_account_path(@account), class: 'btn btn-primary' do
      %span.glyphicon.glyphicon-edit
      = t("general.btn.edit")
    = link_to accounts_path, class: 'btn btn-default' do
      %span.glyphicon.glyphicon-list
      = t("accounts.title.title")

  %h2 Cuenta

%p
  %b #{Account.human_attribute_name('code')}:
  = @account.code
%p
  %b #{Account.human_attribute_name('name')}:
  = @account.name
