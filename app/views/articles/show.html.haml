.page-header
  .pull-right
    = link_to edit_article_path(@article), class: 'btn btn-primary' do
      %span.glyphicon.glyphicon-edit
      = t("general.btn.edit")
    = link_to articles_path, class: 'btn btn-default' do
      %span.glyphicon.glyphicon-list
      = t("articles.title.title")

  %h2 Artículo
%dl.dl-horizontal
  %dt= Article.human_attribute_name('code')
  %dd= @article.code
  %dt= Article.human_attribute_name('description')
  %dd= @article.description
  %dt Material
  %dd= link_to_if @article.material, @article.material_name, @article.material, title: @article.material_code
  %dt= t('general.status')
  %dd= type_status(@article.status)

%h3 Sub Artículos
%table.table.table-hover
  %thead
    %tr
      %th #
      %th= Subarticle.human_attribute_name('code')
      %th= Subarticle.human_attribute_name('description')
      %th= t('general.status')
  %tbody
    - @article.subarticles.each_with_index do |subarticle, index|
      %tr
        %td= index + 1
        %td= subarticle.code
        %td= link_to_if subarticle.description, subarticle.description, subarticle
        %td= type_status(subarticle.status)
