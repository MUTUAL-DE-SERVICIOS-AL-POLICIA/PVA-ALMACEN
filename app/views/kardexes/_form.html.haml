= form_for @kardex do |f|
  - if @kardex.errors.any?
    #error_explanation
      %h2= "#{pluralize(@kardex.errors.count, "error")} prohibited this kardex from being saved:"
      %ul
        - @kardex.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :kardex_date
    = f.date_select :kardex_date
  .field
    = f.label :invoice_number
    = f.number_field :invoice_number
  .field
    = f.label :order_number
    = f.number_field :order_number
  .field
    = f.label :detail
    = f.text_field :detail
  .field
    = f.label :subarticle
    = f.text_field :subarticle
  .actions
    = f.submit 'Save'
