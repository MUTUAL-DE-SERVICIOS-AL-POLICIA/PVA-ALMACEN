.page-header
  .pull-right
    = link_to @subarticle, class: 'btn btn-default' do
      %span.glyphicon.glyphicon-arrow-left
      Atrás
    = link_to subarticle_path(@subarticle, format: :pdf), class: 'btn btn-info' do
      %span.glyphicon.glyphicon-print
      Imprimir
    = link_to subarticles_path, class: 'btn btn-default' do
      %span.glyphicon.glyphicon-list
      Subartículos

  %h3.kardex-inventory
    .title KARDEX DE INVENTARIOS
    .title GESTION 2014

  #request-urls{data: {'request-id' => request_path('{id}'), 'subarticles-articles' => articles_subarticles_path(format: :json), 'get-subarticles' => get_subarticles_subarticles_path(format: :json, q: '%QUERY'), 'subarticles-verify-amount' => verify_amount_subarticle_path('{id}'), 'users-id' => user_path('{id}', format: :json)}}

%dl.dl-horizontal
  %dt DESCRIPCION:
  %dd= @subarticle.description.upcase
  %dt Nº CODIGO:
  %dd= @subarticle.code

%table.table.table-bordered.table-condensed
  %thead
    %tr.vertical-align
      %th.text-center{rowspan: 2} FECHA
      %th.text-center{rowspan: 2} Nº DE FACTURA
      %th.text-center{rowspan: 2} Nº DE PEDIDO MAT
      %th.text-center{rowspan: 2} DETALLE
      %th.text-center{colspan: 3} CANTIDADES
      %th.text-center{rowspan: 2} COSTO UNITARIO
      %th.text-center{colspan: 3} IMPORTES EN BOLIVIANOS
    %tr
      %th ENTRADAS
      %th SALIDAS
      %th SALDOS
      %th ENTRADAS
      %th SALIDAS
      %th SALDOS
  %tbody
    = render @initial_kardex, initial: true
    = render @kardexes
    = render @kardexes.last, final: true