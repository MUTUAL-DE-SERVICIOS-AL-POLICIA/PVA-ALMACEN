.page-header
  %h3 Importar Usuarios

= currently_at t('users.title.title')

= form_tag dbf_path(params[:model]), class: 'form-horizontal', role: 'form', multipart: true do
  .form-group
    = label :dbf, "Archivo DBF", class: 'col-sm-2 control-label'
    .col-sm-10
      = file_field_tag :dbf, class: 'form-control', accept: dbf_mime_types.join(',')
  .form-group
    .col-sm-offset-2.col-sm-10
      = button_tag 'Importar', class: 'btn btn-default'
      = link_to users_path, class: 'btn btn-default' do
        %span.glyphicon.glyphicon-list
        Cancelar
