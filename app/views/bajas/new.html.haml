#bajas-urls{data: {'bajas' => bajas_path, 'proveedores' => get_suppliers_note_entries_path(format: :json, q: '%QUERY')}}
/#obt_ingreso-urls{data: {'obt-ingreso' => obt_cod_ingreso_ingresos_path(format: :json), 'ingreso' => @ingreso.id}}

.row{data: {action: 'bajas'}}
  .col-md-12
    %h3.text-center Ingreso de Activos Fijos

%form#baja-form.form-horizontal{role: 'form'}
  .form-group
    %label.col-sm-3.control-label Respaldo
    .col-sm-3
      = text_field_tag 'documento', @baja.documento, class: 'form-control proveedor-auto required', placeholder: 'Numero documento'
    .col-sm-3
      .input-group
        = text_field_tag 'fecha', format_date(@baja.fecha), class: 'form-control date required', placeholder: 'Fecha baja'
        .input-group-addon
          %span.glyphicon.glyphicon-calendar
  .form-group
    %label.col-sm-3.control-label Observacion
    .col-sm-6
      = text_area 'observacion', @baja.observacion, class: 'form-control required', placeholder: 'Motivo - Documento notarial - Observaciones'


.row
  .col-md-12.col-sm-12
    %form#activos-form{role: 'form'}
      .row.has-success
        .col-md-offset-3.col-sm-offset-2.col-xs-offset-2.col-md-6.col-sm-6.col-xs-6
          = text_field_tag :code, '', class: 'form-control input-lg', placeholder: 'Código de Barras de Activos Fijos (ej. 1-10, 12-15, 17, 20, ...)', autofocus: true
        .col-md-3.col-sm-3.col-xs-3
          = button_tag class: 'btn btn-success btn-lg' do
            %span.glyphicon.glyphicon-search
            Buscar
%br/

%table#ingresos-tbl.table.table-bordered.table-striped.table-hover.table-condensed

%table#proveedor-tbl.table.table-bordered.table-striped.table-hover.table-condensed

-# TODO aún no está completo la funcionalidad de editar la nota de ingreso
-# de activos fijos
- if action_name != 'edit'
  .row
    .col-md-12.col-sm-12.text-center
      = link_to bajas_path, class: 'btn btn-danger cancelar-btn' do
        %span.glyphicon.glyphicon-ban-circle
        Cancelar

      = button_tag class: 'btn btn-primary guardar-btn', data: {disable_with: 'Guardando...'} do
        %span.glyphicon.glyphicon-floppy-save
        Dar de Baja

#confirm-modal
= render 'ingreso_modal'

%script{type: 'text/html', id: 'tpl-activo-seleccionado'}
  %thead
    %tr
      %th.text-center
        %strong.badge{title: 'Total'} {{cantidad}}
      %th.text-center Código
      %th Descripción
      %th.number Precio Unit.
  %tbody
    {{#activos}}
    %tr
      %td.text-center {{indice}}
      %td.text-center {{barcode}}
      %td {{description}}
      %td.number {{precio_formato}}
    {{/activos}}
  %tfoot
    %tr
      %th{colspan: 2}
      %th.number TOTAL
      %th.number {{total}}
