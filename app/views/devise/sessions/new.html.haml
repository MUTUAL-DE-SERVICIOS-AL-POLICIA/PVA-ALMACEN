.content-wrap
  %h4= t('sessions.log_in')
  = form_for(resource, as: resource_name, url: session_path(resource_name))  do |f|
    .form-group
      = f.text_field :username, autofocus: true, class: 'span12 form-control', placeholder: User.human_attribute_name('username')
    .form-group
      = f.password_field :password, class: 'span12 form-control', placeholder: User.human_attribute_name('password')

    %div= f.submit t('general.btn.sign_in'), class: 'btn btn-primary login'
