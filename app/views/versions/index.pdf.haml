.title_pdf
  %h3 Hist√≥rico

%table.table.table-condensed
  %thead
    %tr
      %th.separator.line= Version.human_attribute_name('id')
      %th= Version.human_attribute_name('item_id')
      %th= Version.human_attribute_name('created_at')
      %th= Version.human_attribute_name('event')
      %th= Version.human_attribute_name('whodunnit')
      %th= Version.human_attribute_name('item_type')
  %tbody
    - @array.each do |version|
      %tr
        %td= version.id
        %td= content_tag(:span, version.item_code, title: version.item_name)
        %td= I18n.l(version.created_at, format: :version)
        %td= I18n.t(version.event, scope: 'versions')
        %td= version.whodunnit_name
        %td= I18n.t(version.item_type.to_s.downcase.singularize, scope: 'activerecord.models')
